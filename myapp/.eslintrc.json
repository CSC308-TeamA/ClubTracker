{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "max-len": [1, { "ignoreStrings": true, "ignoreUrls": true }],
        "indent": [2, 2],
        "no-underscore-dangle": [2, { "allow": ["_id"] }],
        "react/forbid-prop-types": [2, {"forbid": ["object", "array"]}]
    }
}
